<div class="modal-header">
    <h3 class="modal-title">编辑合同信息</h3>
</div>
<form name="editForm" action="" class="horizontal-form">
    <div class="modal-body">
        <div class="form-body">
            <div class="form-group"
                 data-ng-class="{'has-error': editForm.Name.$dirty && editForm.Name.$error.required}">
                <label class="control-label">合同名称 *</label>
                <input type="text" name="Name" data-ng-model="ProductContract.Name"  required maxlength="20" class="form-control" placeholder="" />
                <span class="help-block"
                      data-ng-show="editForm.Name.$dirty && editForm.Name.$error.required">
                    此字段为必填。
                </span>
            </div>
            <div class="form-group" data-ng-class="{'has-error': editForm.TemplateHtml.$dirty && editForm.TemplateHtml.$error.required}">
                <label class="control-label">详细内容 *</label>
                <summernote required editable="editable" name="TemplateHtml" height="400" ng-model="ProductContract.TemplateHtml"></summernote>
                <span class="help-block"
                      data-ng-show="editForm.TemplateHtml.$dirty && editForm.TemplateHtml.$error.required">
                    此字段为必填。
                </span>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-primary" ng-disabled="editForm.$invalid" ng-click="save()">保存</button>
        <button class="btn btn-warning" ng-click="cancel()">取消</button>
    </div>
</form>
