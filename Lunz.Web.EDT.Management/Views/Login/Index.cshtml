@{
    Layout = null;
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js" data-ng-app="MetronicApp"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js" data-ng-app="MetronicApp"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en" data-ng-app="MetronicApp">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    @{ Html.RenderPartial("LayoutPartials/Head"); }
    <link href="/content/assets/admin/pages/css/login-soft.css" rel="stylesheet" type="text/css" />
</head>
<!-- END HEAD -->
<body ng-controller="AppController" class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="/content/assets/admin/layout/img/logo-big.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGIN -->
    <div class="content" data-ng-controller="LoginCtrl" data-ng-init="init('@Request.QueryString["returnUrl"]')">
        <!-- BEGIN LOGIN FORM -->
        <form name="LoginForm" method="post" class="login-form" data-ng-submit="login()">
            <h3 class="form-title">登录</h3>
            <div class="alert alert-danger" ng-show="errors.length>0">
                <span data-ng-repeat="error in errors">
                    {{error}}
                </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">用户名</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="用户名" name="username" data-ng-model="username" data-ng-disabled="submitting" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">密码</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="密码" name="password" data-ng-model="password" data-ng-disabled="submitting" />
                </div>
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    <input type="checkbox" name="remember" value="true" data-ng-model="rememberMe" data-ng-disabled="submitting" /> 记住我的登录
                </label>
                <button type="submit" class="btn blue pull-right" data-ng-disabled="submitting">
                    登录 <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
            <div class="forget-password">
                <h4>忘记密码 ？</h4>
                <p>
                    不要担心, 点击 <a href="javascript:;" id="forget-password">
                        这里
                    </a>
                    找回您的密码。
                </p>
            </div>
        </form>

        <!-- END LOGIN FORM -->
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        @DateTime.Today.Year &copy; 青岛轮子软件科技有限公司
    </div>
    <!-- END COPYRIGHT -->
    @{ Html.RenderPartial("LayoutPartials/Foot"); }

    <script src="/content/js/controllers/membership/login.js" type="text/javascript"></script>
    <script src="/content/assets/global/plugins/backstretch/jquery.backstretch.min.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core components
            // init background slide images
            $.backstretch([
             "/content/img/bg/1.jpg",
             "/content/img/bg/2.jpg",
             "/content/img/bg/3.jpg",
             "/content/img/bg/4.jpg"
            ], {
                fade: 1000,
                duration: 8000
            }
         );
        });
    </script>

</body>
<!-- END BODY -->
</html>
